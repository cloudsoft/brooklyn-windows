#set -x # debug

# discover WINRM4J_HOME if not set, by attempting to resolve absolute path of this command
ROOT=$(cd "$(dirname "$0")/.." && pwd -P)
if [ -z "$WINRM4J_HOME" ] ; then
    WINRM4J_HOME=$(cd "$(dirname "$(readlink -f "$0" 2> /dev/null || readlink "$0" 2> /dev/null || echo "$0")")/.." && pwd)
fi
export ROOT WINRM4J_HOME

# use default memory settings, if not specified
if [ -z "${JAVA_OPTS}" ] ; then
    JAVA_OPTS="-Xms256m -Xmx1g -XX:MaxPermSize=256m"
fi

# set up the classpath
INITIAL_CLASSPATH=${WINRM4J_HOME}/conf:${WINRM4J_HOME}/lib/patch/*:${WINRM4J_HOME}/lib/winrm4j/*
# specify additional CP args in BROOKLYN_CLASSPATH
if [ ! -z "${BROOKLYN_CLASSPATH}" ]; then
    INITIAL_CLASSPATH=${BROOKLYN_CLASSPATH}:${INITIAL_CLASSPATH}
fi
export INITIAL_CLASSPATH

# start Brooklyn
echo $$ > "$ROOT/pid_java"
if [[ -n "$JAVA_HOME" && -d "$JAVA_HOME" ]] ; then
	JAVACMD="$JAVA_HOME/bin/java"
else
	JAVACMD="java"
fi

exec $JAVACMD ${JAVA_OPTS} -cp "${INITIAL_CLASSPATH}" io.cloudsoft.winrm4j.winrm.CliClient "$@"
